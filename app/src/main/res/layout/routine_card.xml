<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="RoutineData"
            type="ar.edu.itba.example.gymateapp.view.classes.RoutineData" />
        <variable
            name="clickOnRoutine"
            type="ar.edu.itba.example.gymateapp.view.fragments.ClickOnRoutine" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="16dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:background="@color/cardBg">

            <TextView
                android:id="@+id/routineId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(RoutineData.id)}"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RatingBar
                android:id="@+id/routineRatingBar"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="175dp"
                android:layout_height="30dp"
                android:layout_marginBottom="4dp"
                android:numStars="5"
                android:progressBackgroundTint="@color/starColor"
                android:progressTint="@color/icon"
                android:rating="4"
                android:secondaryProgressTint="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.733"
                app:layout_constraintStart_toStartOf="@+id/creator" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="131dp"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/ex_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/fit" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"

                android:textColor="@color/title1"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/creator"
                app:layout_constraintStart_toEndOf="@+id/image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/creator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"

                android:textColor="@color/title1"
                android:textStyle="italic"
                app:layout_constraintBottom_toTopOf="@+id/routineRatingBar"
                app:layout_constraintStart_toStartOf="@+id/title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>