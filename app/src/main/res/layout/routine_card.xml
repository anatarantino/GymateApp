<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="RoutineData"
            type="ar.edu.itba.example.gymateapp.view.classes.RoutineData" />
        <variable
            name="clickOnRoutine"
            type="ar.edu.itba.example.gymateapp.view.fragments.ClickOnRoutine" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:clickable="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:background="@color/black"
            android:clickable="true"
            android:onClick="@{clickOnRoutine::onClick}">

            <RatingBar
                android:id="@+id/routineRatingBar"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="175dp"
                android:layout_height="30dp"
                android:layout_marginBottom="4dp"
                android:numStars="5"
                android:progressBackgroundTint="#FFFFFF"
                android:progressTint="@color/white"
                android:rating="4"
                android:secondaryProgressTint="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.733"
                app:layout_constraintStart_toStartOf="@+id/creator" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="131dp"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/ex_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/fit" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:text="@string/routine_name"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/creator"
                app:layout_constraintStart_toEndOf="@+id/image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/creator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/jane_doe"
                android:textColor="#FFFFFF"
                android:textStyle="italic"
                app:layout_constraintBottom_toTopOf="@+id/routineRatingBar"
                app:layout_constraintStart_toStartOf="@+id/title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>