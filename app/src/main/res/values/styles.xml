<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Titles" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Titles.RoutineTitle">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="routineCardSecondary">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PopUp" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/primaryColor</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/primaryColor</item>
        <item name="android:background">@color/secondColorVariant</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="executionBarButtom" parent="Widget.AppCompat.Button">
        <item name="background">@android:color/transparent</item>
        <item name="tint">@color/white</item>
    </style>
</resources>
